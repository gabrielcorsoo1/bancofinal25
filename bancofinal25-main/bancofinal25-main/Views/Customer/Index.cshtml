@model IEnumerable<AtlasAir.Models.Customer>

@{
    ViewData["Title"] = "Clientes";
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="autoCloseAlert" class="alert alert-danger alert-dismissible fade show position-relative overflow-hidden" role="alert">
        <strong>Erro!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

        <div class="alert-timer-bar"></div>
    </div>
}

<h1>Lista de Clientes</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Adicionar Cliente</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Cliente especial?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @(item.IsSpecialCustomer ? "Sim" : "Não")
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>