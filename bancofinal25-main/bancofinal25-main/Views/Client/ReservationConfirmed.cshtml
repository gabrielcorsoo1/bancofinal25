@{
    ViewData["Title"] = "Reserva Confirmada";
    var code = ViewBag.ReservationCode as string ?? "";
}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <svg width="72" height="72" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="#28a745" stroke-width="1.5"/>
              <path d="M7 13l3 3 7-8" stroke="#28a745" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <h1 class="h3 mb-2">Reserva confirmada!</h1>
          <p class="text-muted mb-3">Sua reserva foi criada com sucesso. Obrigado por escolher a AtlasAir.</p>

          <p class="mb-3">
            <strong>Código da reserva:</strong>
            <span class="badge bg-success text-white ms-2">@code</span>
          </p>

          <div class="d-flex justify-content-center gap-2 mt-4">
            <a href="@Url.Action("DashboardTest", "Client")" class="btn btn-primary">Ir para meu painel</a>
            <a href="@Url.Action("Search", "Client")" class="btn btn-outline-secondary">Procurar outros voos</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>