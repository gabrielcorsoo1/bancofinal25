@model AtlasAir.Models.Flight
@using AtlasAir.Helpers @{
    ViewData["Title"] = "Excluir Voo";
}

<h1>Excluir Voo</h1>

<h3>Você tem certeza que deseja excluir este item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Partida Agendada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledDeparture)
        </dd>
        
        <dt class="col-sm-2">
            Partida Real
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualDeparture)
        </dd>
        
        <dt class="col-sm-2">
            Chegada Agendada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledArrival)
        </dd>
        
        <dt class="col-sm-2">
            Chegada Real
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualArrival)
        </dd>
        
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status.GetDisplayName() </dd>
        
        <dt class="col-sm-2">
            Origem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginAirport.Name) </dd>
        
        <dt class="col-sm-2">
            Destino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinationAirport.Name)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar para a Lista</a>
    </form>
</div>