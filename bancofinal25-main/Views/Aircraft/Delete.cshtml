@model AtlasAir.Models.Aircraft

@{
    ViewData["Title"] = "Excluir Aeronave";
}

<h1>Excluir Aeronave</h1>

<h3>Você tem certeza que deseja excluir este item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            Número de Assentos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatCount)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar para a Lista</a>
    </form>
</div>