@model IEnumerable<AtlasAir.Models.Aircraft>

@{
    ViewData["Title"] = "Aeronaves";
}

<h1>Lista de Aeronaves</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Adicionar Aeronave</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Modelo
            </th>
            <th>
                Número de assentos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatCount)
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>