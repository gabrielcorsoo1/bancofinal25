@model IEnumerable<AtlasAir.Models.Flight>

@{
    ViewData["Title"] = "Voos Disponíveis";
}

<h2>Voos Disponíveis</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Partida</th>
            <th>Chegada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.Id</td>
            <td>@f.OriginAirport?.Name</td>
            <td>@f.DestinationAirport?.Name</td>
            <td>@f.ScheduledDeparture.ToString("g")</td>
            <td>@f.ScheduledArrival.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@f.Id" class="btn btn-sm btn-primary">Ver / Comprar</a>
            </td>
        </tr>
    }
    </tbody>
</table>