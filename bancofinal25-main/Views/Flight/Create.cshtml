@model AtlasAir.Models.Flight

@{
    ViewData["Title"] = "Adicionar Voo";
}

<h1>Adicionar Voo</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="OriginAirportId" class="control-label">Aeroporto de Origem</label>
                <select asp-for="OriginAirportId" class="form-control" asp-items="ViewBag.OriginAirportId">
                    <option value="">-- Selecione a origem</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="DestinationAirportId" class="control-label">Aeroporto de Destino</label>
                <select asp-for="DestinationAirportId" class="form-control" asp-items="ViewBag.DestinationAirportId">
                    <option value="">-- Selecione o destino</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="ScheduledDeparture" class="control-label">Partida Agendada</label>
                <input asp-for="ScheduledDeparture" class="form-control" />
                <span asp-validation-for="ScheduledDeparture" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ScheduledArrival" class="control-label">Chegada Agendada</label>
                <input asp-for="ScheduledArrival" class="form-control" />
                <span asp-validation-for="ScheduledArrival" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}