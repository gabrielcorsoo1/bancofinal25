@model AtlasAir.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Registrar";
}
<style>
    .register-card { max-width: 900px; margin: 0 auto; }
    .register-form .form-control { font-size: .95rem; padding: .45rem .6rem; }
    .register-form .form-label { font-size: .9rem; margin-bottom: .25rem; }
    .register-form .auth-title { font-size: 1.5rem; }
    .register-form .auth-sub { font-size: .95rem; margin-bottom: .8rem; color: #4a687e; }

    /* Responsividade: em telas médias+ os inputs ficam lado a lado */
    @@media (min-width: 768px) {
        .register-card { padding: 0 12px; }
    }
</style>

<div class="register-card">
    <div class="bg-white p-3 p-md-4 rounded shadow-sm">
        <h2 class="auth-title">Criar conta</h2>
        <p class="auth-sub">Preencha seus dados para criar sua conta.</p>

        <form asp-action="Register" method="post" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="Name" class="form-label">Nome</label>
                    <input asp-for="Name" class="form-control form-control-sm" />
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="Phone" class="form-label">Telefone</label>
                    <input asp-for="Phone" class="form-control form-control-sm" />
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control form-control-sm" />
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" class="form-control form-control-sm" type="password" />
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar senha</label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-sm" type="password" />
                </div>
            </div>

            <div class="form-check mt-3">
                <input asp-for="IsAdmin" class="form-check-input" id="IsAdmin" />
                <label asp-for="IsAdmin" class="form-check-label">
                    Registrar como administrador (apenas para testes)
                </label>
            </div>

            <div class="mt-3 d-flex align-items-center">
                <button type="submit" class="btn btn-warning me-3">Registrar</button>
                <a asp-controller="Account" asp-action="Login" class="btn btn-link">Já tenho conta</a>
            </div>
        </form>
    </div>
</div>