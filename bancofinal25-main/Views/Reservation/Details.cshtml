@model AtlasAir.Models.Reservation
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Detalhes da Reserva";
    var session = ViewContext?.HttpContext?.Session;
    var isAdmin = session?.GetString("IsAdmin") == "1";
}

<h1>Detalhes da Reserva</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código da Reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationCode)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Data da Reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            Data de Cancelamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CancellationDate)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            Assento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat.SeatNumber)
        </dd>
        <dt class="col-sm-2">
            Voo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Id)
        </dd>
    </dl>
</div>
<div class="mt-4">
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Editar</a>
    }
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar</a>
</div>